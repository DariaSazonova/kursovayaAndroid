<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="booksShop8.Views.FirstMainPage"
             Title="Главная"
             BackgroundColor="White">
 
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Button Clicked="Button_ClickedPopular" Grid.Row="0" Text="Популярные" FontSize="Large" CornerRadius="100" Margin="10"/>
        <Button  Clicked="Button_ClickedNew" Grid.Row="1" Text="Новинки" CornerRadius="100" FontSize="Large" Margin="10"/>
        <Button Clicked="Button_ClickedSoon" Grid.Row="2" Text="Скоро в продаже" CornerRadius="100"  FontSize="Large" Margin="10"/>
        </Grid>

</ContentPage>